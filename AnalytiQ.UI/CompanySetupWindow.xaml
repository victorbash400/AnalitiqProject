<Window x:Class="AnalytiQ.UI.CompanySetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalytiQ.UI"
        mc:Ignorable="d"
        Title="Company Setup"
        WindowStartupLocation="CenterScreen"
        Width="1000" Height="700"
        Background="#121212"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D2D"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="TabIndex" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#A2B29F" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#A2B29F" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#1A1A1A" TargetName="border"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2D2D2D"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <ToggleButton x:Name="ToggleButton" 
                                                  BorderBrush="Transparent"
                                                  Background="Transparent"
                                                  Focusable="false"
                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" BorderThickness="0">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <ContentPresenter x:Name="ContentSite"
                                                                          Margin="8,5,0,5"
                                                                          VerticalAlignment="Center"/>
                                                        <Path x:Name="Arrow" Grid.Column="1"
                                                              Fill="#A2B29F" 
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Data="M0,0 L8,0 L4,4 Z"
                                                              Margin="0,0,15,0"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>
                                    <ContentPresenter Name="ContentSite"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      Margin="12,10"/>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   Placement="Bottom"
                                   Width="{TemplateBinding ActualWidth}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="#1A1A1A" 
                                        BorderBrush="#2D2D2D" 
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer SnapsToDevicePixels="True" 
                                                  MaxHeight="200">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#A2B29F" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#A2B29F" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#1A1A1A" TargetName="border"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- ComboBoxItem style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                    <Setter Property="Foreground" Value="#A2B29F"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#A2B29F"/>
            <Setter Property="Foreground" Value="#121212"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B2C2AF" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#92A28F" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#4D4D4D" TargetName="border"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D3D" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D1D1D" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Scrollbar Style -->
        <Style x:Key="ThinScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>

                            <ScrollBar x:Name="PART_VerticalScrollBar" 
                                       Grid.Column="1" Grid.Row="0"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Width="8"/>

                            <ScrollBar x:Name="PART_HorizontalScrollBar" 
                                       Grid.Column="0" Grid.Row="1"
                                       Orientation="Horizontal"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                       Height="8"/>

                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern thin scrollbar -->
        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border x:Name="ThumbTrack" Background="#1A1A1A" CornerRadius="4"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageUpCommand" Opacity="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="thumbBorder" Background="#3D3D3D" CornerRadius="4"/>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#4D4D4D"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="thumbBorder" Property="Background" Value="#5D5D5D"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageDownCommand" Opacity="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#121212">
        <Border CornerRadius="12" Background="#121212" Margin="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="450"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Decorative with Image -->
                <Border Grid.Column="0" Margin="0,0,10,0" ClipToBounds="True">
                    <Grid>
                        <Border CornerRadius="0" ClipToBounds="True">
                            <Image Source="/assets/blue_lake.jpeg" Stretch="UniformToFill"/>
                        </Border>
                        <Rectangle RadiusX="0" RadiusY="0">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#AA000000" Offset="0.0"/>
                                    <GradientStop Color="#CC000000" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <StackPanel VerticalAlignment="Bottom" Margin="30,0,30,40">
                            <TextBlock Text="Welcome to" Foreground="White" FontSize="22" FontWeight="Light" Margin="0,0,0,5"/>
                            <TextBlock Text="AnalytiQ" Foreground="White" FontSize="30" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock Text="Business Intelligence Platform" Foreground="#E0E0E0" FontSize="15" TextWrapping="Wrap" Margin="0,0,0,12" LineHeight="22"/>
                            <TextBlock Text="Register your organization to get started." Foreground="#A2B29F" FontSize="13" TextWrapping="Wrap" Margin="0,0,0,15"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right Side - Form -->
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Border Background="#1A1A1A" CornerRadius="12">
                        <!-- Added ScrollViewer to make form scrollable -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="0,0,5,0" 
                                      Style="{StaticResource ThinScrollViewer}">
                            <StackPanel Margin="25,30">
                                <TextBlock Text="Company Registration" FontSize="22" FontWeight="SemiBold" Foreground="#E0E0E0" Margin="0,0,0,6"/>
                                <TextBlock Text="Complete your organization's details to get started" FontSize="13" Foreground="#A0A0A0" Margin="0,0,0,20"/>

                                <TextBlock Text="Company Name" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtCompanyName" Style="{StaticResource ModernTextBox}" 
                                       Margin="0,0,0,15" TextChanged="ValidateForm" TabIndex="1"/>

                                <TextBlock Text="Industry" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cboIndustry" Style="{StaticResource ModernComboBox}" 
                                        Margin="0,0,0,15" SelectionChanged="ValidateForm" TabIndex="2">
                                    <ComboBoxItem Content="Finance"/>
                                    <ComboBoxItem Content="Retail"/>
                                    <ComboBoxItem Content="Manufacturing"/>
                                    <ComboBoxItem Content="Technology"/>
                                    <ComboBoxItem Content="Healthcare"/>
                                    <ComboBoxItem Content="Other"/>
                                </ComboBox>

                                <TextBlock Text="Tenant ID" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtTenantId" Style="{StaticResource ModernTextBox}" 
                                       IsReadOnly="True" Background="#2A2A2A" Margin="0,0,0,15" TabIndex="3"/>

                                <TextBlock Text="Admin Email" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtAdminEmail" Style="{StaticResource ModernTextBox}" 
                                       IsReadOnly="True" Background="#2A2A2A" Margin="0,0,0,20" TabIndex="4"/>

                                <Border BorderBrush="#2D2D2D" BorderThickness="0,1,0,0" Margin="0,0,0,20"/>

                                <CheckBox x:Name="chkConfirm" Margin="0,0,0,20" Checked="ValidateForm" Unchecked="ValidateForm"
                                          TabIndex="5" Cursor="Hand" Foreground="#E0E0E0">
                                    <TextBlock Text="I confirm I am authorized to register this company." 
                                             FontSize="13" TextWrapping="Wrap" Foreground="#E0E0E0"/>
                                </CheckBox>

                                <Border x:Name="errorContainer" Background="#FFEBEE" CornerRadius="6" 
                                      Padding="12,8" Margin="0,0,0,20" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚠️" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="txtErrorMessage" Foreground="#D32F2F" FontSize="12" 
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>

                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="btnRegister" Content="Register" Grid.Column="0"
                                          Style="{StaticResource PrimaryButton}" Margin="0,0,8,0" 
                                          Click="Register_Click" IsEnabled="False" IsDefault="True" TabIndex="6"
                                          Padding="12,10"/>

                                    <Button x:Name="btnSkipRegistration" Content="Skip" Grid.Column="1"
                                          Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                                          Click="SkipRegistration_Click" TabIndex="7"
                                          Padding="12,10"/>
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>